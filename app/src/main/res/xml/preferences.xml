<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="General"
        android:textColor="@color/primary" >
        <EditTextPreference
            android:key="username"
            android:summary="Please provide your username"
            android:title="Your Name"></EditTextPreference>
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="applicationUpdates"
            android:summary="This option if selected will allow the application to check for latest versions."
            android:title="Application Updates" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Textos"
        android:textColor="@color/primary">
        <ListPreference
            android:defaultValue="16"
            android:entries="@array/listArray"
            android:entryValues="@array/listValues"
            android:key="textsize"
            android:summary="Selecciona el tamaño de texto para articulos y comentarios"
            android:title="Tamaño de Texto" />

    </PreferenceCategory>
    
</PreferenceScreen>